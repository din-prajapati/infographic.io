# ============================================
# Infographic Editor - Environment Variables Template
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!
#
# Usage: cp .env.example .env
# Then edit .env with your actual values
# ============================================

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL connection string
# Required for: Database features, user authentication, design storage
# Format: postgresql://user:password@host:port/database
# Example: postgresql://postgres:password@localhost:5432/infographic_db
# Note: App can run without database for basic features, but will throw error on startup
DATABASE_URL=postgresql://user:password@localhost:5432/infographic_db

# ============================================
# SERVER CONFIGURATION
# ============================================
# Express server port (default: 5000)
# This is the main port that serves both API and frontend
PORT=5000

# NestJS API port (default: 3001)
# Internal API server port
API_PORT=3001

# Base URL for the application (used for webhooks and redirects)
# Example: https://yourdomain.com or http://localhost:5000
BASE_URL=http://localhost:5000

# Node environment (development/production)
NODE_ENV=development

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
# JWT secret key for token signing
# REQUIRED: Change this to a secure random string in production
# Generate with: openssl rand -base64 32
JWT_SECRET=your-secret-key-change-in-production

# ============================================
# AI SERVICES
# ============================================
# OpenAI API key for AI-powered features
# Optional: App runs in demo mode without this
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Ideogram API key for image generation
# Optional: Required for Ideogram-based infographic generation
# Get from: https://ideogram.ai/api
IDEOGRAM_API_KEY=your-ideogram-api-key-here

# Demo mode flag (true/false)
# When true, AI features run in demo mode without real API calls
DEMO_MODE=false

# Use mock AI responses (legacy option)
USE_MOCK_AI=false

# ============================================
# RAZORPAY CONFIGURATION (India)
# ============================================
# RazorPay Key ID (public key)
# Required for: RazorPay payment processing
# Get from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_your_key_id

# RazorPay Key Secret (private key)
# Required for: RazorPay payment processing
# Keep this secret! Never commit to version control.
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# RazorPay Webhook Secret
# Required for: Webhook signature verification
# Get from: RazorPay Dashboard > Settings > Webhooks
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# RazorPay Plan IDs (create plans in RazorPay dashboard first)
# These are the plan IDs from your RazorPay dashboard
RAZORPAY_PLAN_SOLO=plan_solo
RAZORPAY_PLAN_TEAM=plan_team
RAZORPAY_PLAN_BROKERAGE=plan_brokerage
RAZORPAY_PLAN_API_STARTER=plan_api_starter
RAZORPAY_PLAN_API_GROWTH=plan_api_growth

# ============================================
# STRIPE CONFIGURATION (International)
# ============================================
# Stripe feature flag (true/false)
# Set to 'true' to enable Stripe payment provider
# Note: Stripe is invite-only for India-based founders
STRIPE_ENABLED=false

# Stripe Secret Key (private key)
# Required if STRIPE_ENABLED=true
# Format: sk_test_... or sk_live_...
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Stripe Publishable Key (public key)
# Required if STRIPE_ENABLED=true
# Format: pk_test_... or pk_live_...
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Stripe Webhook Secret
# Required for: Webhook signature verification
# Get from: Stripe Dashboard > Developers > Webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Stripe Plan IDs (create plans/products in Stripe dashboard first)
# These are the Price IDs from your Stripe dashboard
STRIPE_PLAN_SOLO=price_solo
STRIPE_PLAN_TEAM=price_team
STRIPE_PLAN_BROKERAGE=price_brokerage
STRIPE_PLAN_API_STARTER=price_api_starter
STRIPE_PLAN_API_GROWTH=price_api_growth

# ============================================
# FRONTEND ENVIRONMENT VARIABLES (VITE_*)
# ============================================
# These variables are exposed to the browser
# Prefix with VITE_ to make them available in client code
# Access via: import.meta.env.VITE_RAZORPAY_KEY_ID
# IMPORTANT: Only use PUBLIC keys here, never secrets!

# RazorPay Key ID for frontend (public key only)
# This is safe to expose in the browser
VITE_RAZORPAY_KEY_ID=rzp_test_your_key_id

# Stripe Publishable Key for frontend (public key only)
# This is safe to expose in the browser
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# ============================================
# OPTIONAL PAYMENT PROVIDERS
# ============================================
# Paddle API Key (optional)
# Required for: Paddle payment provider
PADDLE_API_KEY=your_paddle_api_key

# Paddle Webhook Secret (optional)
# Required for: Paddle webhook verification
PADDLE_WEBHOOK_SECRET=your_paddle_webhook_secret

# PayPal Client ID (optional)
# Required for: PayPal payment provider
PAYPAL_CLIENT_ID=your_paypal_client_id

# PayPal Client Secret (optional)
# Required for: PayPal payment provider
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# ============================================
# NOTES
# ============================================
# 1. Never commit .env file to version control
# 2. Use different keys for development and production
# 3. For production, use strong, randomly generated JWT_SECRET
# 4. Payment provider plan IDs must be created in respective dashboards first
# 5. Webhook secrets are required for secure webhook processing
# 6. Frontend variables (VITE_*) are exposed to browser - only use public keys
# 7. Database is optional - app can run without it for basic features (but will show error)
# 8. AI services are optional - app runs in demo mode without them
# 9. Most variables have defaults - app will work with minimal configuration
