# ============================================
# DEVELOPMENT / TEST ENVIRONMENT
# ============================================
# Copy to .env.development or .env and fill in values.
# Use Razorpay TEST Mode keys and TEST plan IDs only.
# NEVER use live keys or live plan IDs in development.
#
# Usage: cp .env.development.example .env
# Or:    cp .env.development.example .env.development
# ============================================

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/infographic_db
PGDATABASE=infographic_db
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=password

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=5000
API_PORT=3001
NODE_ENV=development
BASE_URL=http://localhost:5000
CLIENT_URL=http://localhost:5173

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
JWT_SECRET=your-secret-key-dev-only
SESSION_SECRET=your-session-secret-dev-only

# ============================================
# AI SERVICES
# ============================================
OPENAI_API_KEY=sk-proj-...
IDEOGRAM_API_KEY=...
GOOGLE_API_KEY=

# ============================================
# PAYMENT - RAZORPAY (TEST MODE ONLY)
# ============================================
# From Dashboard with Test Mode ON: Settings â†’ API Keys
RAZORPAY_KEY_ID=rzp_test_...
RAZORPAY_KEY_SECRET=...
RAZORPAY_WEBHOOK_SECRET=test_infographic_hook_secret
# Infographic Product - Plan IDs (match Razorpay Dashboard plan names)
# See docs/payments/RAZORPAY_SETUP_GUIDE.md for plan naming (e.g. InfographicAI - SOLO Monthly)
# SOLO: Monthly & Annual plans (app uses these by billingPeriod; default vars optional)
RAZORPAY_PLAN_SOLO_MONTHLY=plan_S9hipPMOthEPfy
RAZORPAY_PLAN_SOLO_ANNUAL=plan_S9hkEAId3XAnB7
# Optional fallback when _MONTHLY not set: set to Monthly plan ID
# RAZORPAY_PLAN_SOLO=plan_...
# TEAM: Monthly & Annual plans
RAZORPAY_PLAN_TEAM_MONTHLY=plan_S9hmdDtMbWLbCc
RAZORPAY_PLAN_TEAM_ANNUAL=plan_S9hnmRuF9943xs
# RAZORPAY_PLAN_TEAM=plan_...
# BROKERAGE: Monthly & Annual plans (optional)
RAZORPAY_PLAN_BROKERAGE_MONTHLY=plan_...
RAZORPAY_PLAN_BROKERAGE_ANNUAL=plan_...
# RAZORPAY_PLAN_BROKERAGE=plan_...
# API tiers (if used)
RAZORPAY_PLAN_API_STARTER=plan_...
RAZORPAY_PLAN_API_GROWTH=plan_...

# ============================================
# PAYMENT - STRIPE (TEST MODE - OPTIONAL)
# ============================================
STRIPE_ENABLED=false
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PLAN_SOLO=price_...
STRIPE_PLAN_TEAM=price_...
STRIPE_PLAN_BROKERAGE=price_...
STRIPE_PLAN_API_STARTER=price_...
STRIPE_PLAN_API_GROWTH=price_...

# ============================================
# FRONTEND (VITE) - Development
# ============================================
# Vite loads these when mode=development (npm run dev)
VITE_API_URL=http://localhost:3001
VITE_API_BASE=/api/v1
VITE_CLIENT_URL=http://localhost:5173
VITE_RAZORPAY_KEY_ID=rzp_test_...
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_...
VITE_ENABLE_STRIPE=false
VITE_ENABLE_ANALYTICS=false
